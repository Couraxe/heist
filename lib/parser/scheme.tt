module Heist
  grammar Scheme
    rule program
      shebang? cell* <Program>
    end
    
    rule shebang
      space* "#!" (![\n\r] .)*
    end
    
    rule cell
      ignore quote cell <QuotedCell> /
      ignore (list / vector / atom) ignore <Cell>
    end
    
    rule quote
      "'" / "`" / ",@" / ","
    end
    
    rule dot
      "."
    end
    
    rule hash
      "#"
    end
    
    rule list
      ("(" cells ")" / "[" cells "]") <List>
    end
    
    rule cells
      cell+ (dot space cell) /
      cell* ignore
    end
    
    rule vector
      hash '(' cell* ignore ')' <Vector>
    end
    
    rule atom
      datum / identifier
    end
    
    rule datum
      (boolean / number / string) !(!delimiter .) <Datum>
    end
    
    rule boolean
      hash [tf] <Boolean>
    end
    
    rule number
      complex / real / rational / integer
    end
    
    rule complex
      real:(real / integer) "+" imaginary:(real / integer) "i" <Complex>
    end
    
    rule real
      integer ("." digit+) <Real>
    end
    
    rule rational
      numerator:integer "/" denominator:integer <Rational>
    end
    
    rule integer
      "-"? ("0" / [1-9] digit*) <Integer>
    end
    
    rule string
      '"' ('\\"' / [^"])* '"' <String>
    end
    
    rule identifier
      ((!delimiter .) (!delimiter .)+ / (!reserved .)) <Identifier>
    end
    
    rule digit
      [0-9]
    end
    
    rule reserved
      dot / delimiter
    end
    
    rule delimiter
      quote / hash / paren / space
    end
    
    rule paren
      [\(\)\[\]]
    end
    
    rule space
      [\s\n\r\t]
    end
    
    rule ignore
      space* (comment ignore)?
    end
    
    rule comment
      ";" (![\n\r] .)*
    end
  end
end

